<li class='interface-fields nested-fields list-group-item mt-1 mb-0 border-bottom-0' data-num="0">
  <div class='form-row'>
    <div class='col-5'>
      <%= form.select 'interfaces_attributes[][medium]', raw("<option value='' selected disabled>choose type</option><option value='email'>email</option><option value='phone'>phone</option><option value='fax'>fax</option>"), {}, { class: 'form-control' } %>
    </div>
    <div class='col-6'>
      <%= form.text_field 'interfaces_attributes[][value]',  { placeholder: 'enter value', class: 'form-control' } %>
    </div>
    <div class='col-1 d-flex align-items-start'>
      <%= button_tag fa_icon('times', class: 'text-danger mt-2'), type: :button, onclick: '$(this).closest(".nested-fields").remove()', class: 'btn btn' %>
      <%=  %>
    </div>
    <div class='col-12'>
      <%= form.text_field 'interfaces_attributes[][description]',  { placeholder: 'write a description', class: 'mt-2 form-control'} %>
    </div>
  </div>
</li>
